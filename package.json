{
  "name": "mediapp",
  "version": "1.0.0",
  "description": "üè• MediApp - Healthcare Management System",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:docker-detached": "docker-compose -f docker-compose.dev.yml up --build -d",
    "prod": "docker-compose up --build",
    "prod:detached": "docker-compose up --build -d",
    "stop": "docker-compose down",
    "stop:dev": "docker-compose -f docker-compose.dev.yml down",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "lint": "cd frontend && npm run lint",
    "format": "cd frontend && npm run format",
    "typecheck": "cd frontend && npm run typecheck",
    "test": "echo \"No hay tests definidos\" && exit 0",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && go mod download"
  },
  "keywords": [
    "react",
    "typescript",
    "vite",
    "tailwindcss",
    "go",
    "postgresql"
  ],
  "author": "MediApp Team",
  "license": "MIT",
  
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
